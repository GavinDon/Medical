<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/app_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="#25d1c3"
                android:gravity="center"
                android:orientation="vertical" >

                <com.sltj.medical.wedgit.CircleImageView
                    android:id="@+id/iv_mine_icon"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user_icon" />

                <TextView
                    android:id="@+id/tv_mine_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="angel"
                    android:textColor="@color/white"
                    android:textSize="22sp" />
            </LinearLayout>

            <!-- list列表 -->

            <com.sltj.medical.wedgit.WrapHeightListView
                android:id="@+id/lv_mine_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:cacheColorHint="@null"
                android:divider="@color/divideline"
                android:dividerHeight="1px" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>