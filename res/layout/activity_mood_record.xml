    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="${relativePackage}.${activityClass}" >

        <include layout="@layout/app_title" />

        <TextView
            android:id="@+id/tv_mood_evarage"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:background="@drawable/shape_pink_bg"
            android:gravity="center"
            android:text="您今日的心情总得分：60"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ListView
                android:id="@+id/lv_mood_record"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/divideline"
                android:dividerHeight="1px"
                android:gravity="center_vertical" >
            </ListView>

            <ImageButton
                android:id="@+id/btn"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/fab_btn_add"
                android:padding="20dp"
                android:src="@drawable/list_add" />
        </FrameLayout>
    </LinearLayout>
